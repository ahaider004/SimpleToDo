<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E86868"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="98dp"
        android:layout_height="53dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Add"
        app:layout_constraintStart_toEndOf="@+id/etItem"
        app:layout_constraintTop_toBottomOf="@+id/rvItems"
        android:backgroundTint="@android:color/white"
        android:textColor="#DA0909"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="393dp"
        android:layout_height="508dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toTopOf="@+id/etItem"

        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etItem"
        android:layout_width="291dp"
        android:layout_height="51dp"
        android:layout_margin="0dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Enter an Item"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/rvItems"
        android:textColor="#FFFFFF"
        />
</androidx.constraintlayout.widget.ConstraintLayout>